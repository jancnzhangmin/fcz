<Window x:Class="PocclientApplication.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="250" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
   
    <Grid>

        <Label Content="用户名:" HorizontalAlignment="Left" Margin="55,42,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="140,42,0,0" Name="numberTextBox"  VerticalAlignment="Top" Width="120"/>

        <Label Content="  密  码 :" HorizontalAlignment="Left" Margin="55,109,0,0" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="140,109,0,0" Name="passwordTextBox" VerticalAlignment="Top" Width="120" KeyDown="passwordTextBox_KeyDown" />

        <Button Content="登录" Height="23" HorizontalAlignment="Left" Margin="157,167,0,0" Name="login" VerticalAlignment="Top" Width="75" Click="login_Click" />
    </Grid>
</Window>
